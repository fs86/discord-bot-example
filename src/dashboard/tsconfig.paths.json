{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@components": ["components"],
      "@components/*": ["components/*"],

      "@helpers": ["helpers"],
      "@helpers/*": ["helpers/*"],

      "@layouts": ["layouts"],
      "@layouts/*": ["layouts/*"],

      "@pages": ["pages"],
      "@pages/*": ["pages/*"],

      "@services": ["services"],
      "@services/*": ["services/*"],

      "@viewmodels": ["viewmodels"],
      "@viewmodels/*": ["viewmodels/*"]
    }
  }
}